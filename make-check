#! /bin/bash

cd src

  # Run check on all Lua files:
  echo "Check"
  echo "====="
  luacheck $(find . -name "*.lua")

  # Run coverage on all test files:
  for file in $(find . -name "*.test.lua")
  do
    lua -lluacov ${file}
  done

  # Run coverage analysis:
  rm -rf coverage/ coverage.txt
  mkdir -p coverage/
  ../bin/coverage
  rm -f luacov.stats.out luacov.report.out
  echo
  echo "Coverage"
  echo "========"
  cat ../coverage.txt

cd ..
